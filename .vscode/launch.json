{
    "configurations": [
        {
            "name": "ProductCatalogApi",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build ProductCatalogApi",
            "program": "${workspaceFolder}/v1/ProductCatalogApi/bin/Debug/net8.0/ProductCatalogApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:5001"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "requireExactSource": true
        }
    ]
}